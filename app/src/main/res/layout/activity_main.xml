<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luteh.retrofitexample.MainActivity">

    <TextView
        android:id="@+id/responseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMultipleResource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Multiple Resource"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/responseText" />

    <Button
        android:id="@+id/btnCreateNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New User"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMultipleResource" />
    <Button
        android:id="@+id/btnGetListUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get List Users"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCreateNewUser" />
    <Button
        android:id="@+id/btnPostNameJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POST name and job Url"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGetListUsers" />

</android.support.constraint.ConstraintLayout>
